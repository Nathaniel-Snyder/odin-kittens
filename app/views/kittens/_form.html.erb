<%= form_for @kitten do |f| %>
	<p>
		<%= f.label :name %>
		<%= f.text_field :name, class: 'control-horizontal' %></br>

		<%= f.label :age %>
		<%= f.number_field :age, class: 'control-horizontal' %></br>

		<%= f.label :softness %>
		<%= f.text_field :softness, class: 'control-horizontal' %></br>

		<%= f.label :cuteness %>
		<%= f.text_field :cuteness, class: 'control-horizontal' %></br>

		<%= f.submit %>
	</p>
<% end %>
