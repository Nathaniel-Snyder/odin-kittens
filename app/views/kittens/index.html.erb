<h1>All kittens</h1>
<%= link_to 'New Kitten', new_kitten_path %>
<table class='table-hover table-bordered table-condensed'>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th>Softness</th>
    <th>Cuteness</th>
    <th colspan="3">Actions</th>
  </tr>
 
  <% @kittens.each do |kitten| %>
    <tr>
      <td><%= kitten.name %></td>
      <td><%= kitten.age %></td>
      <td><%= kitten.softness %></td>
      <td><%= kitten.cuteness %></td>
      <td><%= link_to 'Show', kitten_path(kitten) %></td>
      <td><%= link_to 'Edit', edit_kitten_path(kitten) %></td>
      <td><%= link_to 'Destroy', kitten_path(kitten),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>